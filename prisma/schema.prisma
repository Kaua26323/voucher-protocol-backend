generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(uuid())
  name       String @unique
  email      String @unique
  password   String
  isAdmin    Boolean
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  @@map("users")
}

model Voucher {
  id          String @id @default(uuid())
  date        String
  isComplete  Boolean
  type        String
  description String?
  lastUser    String

  @@map("vouchers")
}